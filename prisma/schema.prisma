generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  password String
  image    String
  comment  Comment[]
}

model Comment {
  id               Int       @id @default(autoincrement())
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  content          String
  likes            Int       @default(0)
  authorId         Int
  author           User      @relation(fields: [authorId], references: [id])
  parentCommentId  Int?
  parentComment    Comment?  @relation("CommentHistory", fields: [parentCommentId], references: [id])
  childrenComments Comment[] @relation("CommentHistory")
}
